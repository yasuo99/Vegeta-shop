@page
@model VegetableShop.Areas.Identity.Pages.Accounts.LoginModel
@{
    ViewBag.Title = "Đăng nhập tài khoản - mua sắm online rau củ quả";
}
<div class="outside-form">
    <div class="container form-group">
        <div class="row">
            <div class="col">
                <img src="~/images/login-demo-2.jpg" class="mt-2 rounded"/>
            </div>
            <div class="col p-2">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <h2>Đăng nhập</h2>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LoginDTO.Username)
                                <input type="text" name="Username" value="" autocomplete="off" class="form-control" placeholder="SĐT/Email/Tên đăng nhập" />
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LoginDTO.Password)
                                <input type="password" name="Password" value="" class="form-control" placeholder="Mật khẩu" autocomplete="on"/>
                            </div>
                            <div class="form-group">
                                <input class="btn btn-success rounded w-100" value="Đăng nhập" type="submit" />
                            </div>
                        </form>
                        <div class="form-group d-flex justify-content-between">
                            <a>Quên mật khẩu</a>
                            <a asp-area="Identity" asp-page="Register">Đăng ký</a>
                        </div>
                        <p class="text-center mb-0">HOẶC</p>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-primary rounded"><i class="fab fa-google"></i> Google</button>
                                <button class="btn btn-primary rounded"><i class="fab fa-facebook-f"></i> Facebook</button>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>

    </div>
</div>
